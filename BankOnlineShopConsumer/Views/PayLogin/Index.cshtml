@model BankOnlineShopConsumer.Models.PartnerAccount
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    <link href="~/Assets/client/css/loginPay.css" rel="stylesheet" />
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading" style="text-align: center;">
                    <h3 class="panel-title">Please Sign In Pay</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Index", "PayLogin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Account number" name="partnerAccount" type="number" autofocus>
                                <div>
                                    @Html.ValidationMessageFor(model => model.partnerAccount, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password">
                                <div>
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


