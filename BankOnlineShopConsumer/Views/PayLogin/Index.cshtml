@model BankOnlineShopConsumer.Models.PartnerAccount
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "PayLogin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="text-align: center">
        <h4>Thanh toán online</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="left: 200px; right: 200px">
            <div>
                <h4>Tài khoản</h4>
            </div>
            <div>
                <input type="text" name="partnerAccount" />
            </div>
            <div>
                @Html.ValidationMessageFor(model => model.partnerAccount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <h4>Mật Khẩu</h4>
            </div>
            <div>
                <input type="password" name="password" />
            </div>
            <div>
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Đăng nhập" class="btn btn-default" />
            </div>
        </div>
    </div>
}
