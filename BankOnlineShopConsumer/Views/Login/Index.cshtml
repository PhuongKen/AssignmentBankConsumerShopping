@model BankOnlineShopConsumer.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .field-validation-error {
        color: Red;
    }
</style>
<div class="container" style="margin-top: 50px">
    <div style="text-align: center">
        <h2>Login</h2>
    </div>
    <div style="text-align: center">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div style="margin-bottom: 10px;">
                @Html.ValidationSummary(true, "", new { @class = "field-validation-error" })
            </div>
            <h2 class="label-success" style="color: green">@ViewBag.SuccessMessage</h2>
            <div class="form-horizontal">
                <div class="form-group" style="margin-bottom: 10px;">
                    <label>User Name</label>
                    @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "field-validation-error" })
                </div>

                <div class="form-group" style="margin-bottom: 10px;">
                    <label>Password</label>
                    @Html.PasswordFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "field-validation-error" })
                </div>
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.RememberMe)Remember Me
                    </label>
                </div>
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-primary" value="Login">
                    <input type="reset" class="btn btn-primary" value="Reset" />
                </div>
            </div>
        }
    </div>
</div>
